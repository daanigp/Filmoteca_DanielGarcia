<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmDataActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="410dp"
        android:layout_height="529dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="412dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgPeli"
                android:layout_width="148dp"
                android:layout_height="227dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.117"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.152"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtNumAnyo"
                android:layout_width="88dp"
                android:layout_height="22dp"
                android:text="TextView"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.089"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtAnyo"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtDirector"
                android:layout_width="157dp"
                android:layout_height="22dp"
                android:layout_marginStart="12dp"
                android:text="@string/Director"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.015"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtNomPelicula"
                app:layout_constraintVertical_bias="0.002" />

            <TextView
                android:id="@+id/txtNomDirector"
                android:layout_width="187dp"
                android:layout_height="56dp"
                android:text="TextView"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.282"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtDirector"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtFormatoGenero"
                android:layout_width="159dp"
                android:layout_height="28dp"
                android:text="TextView"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.175"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtNumAnyo"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtAnyo"
                android:layout_width="157dp"
                android:layout_height="22dp"
                android:layout_marginStart="12dp"
                android:text="@string/Anyo"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.015"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtNomDirector"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnWebIMDB"
                android:layout_width="194dp"
                android:layout_height="58dp"
                android:text="@string/IMDB"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txtFormatoGenero"
                app:layout_constraintVertical_bias="0.151" />

            <TextView
                android:id="@+id/txtNomPelicula"
                android:layout_width="187dp"
                android:layout_height="70dp"
                android:text="TextView"
                android:textSize="16dp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.282"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.1" />

            <TextView
                android:id="@+id/txtComentario"
                android:layout_width="324dp"
                android:layout_height="96dp"
                android:layout_marginTop="27dp"
                android:text="TextView"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.462"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnWebIMDB"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnVolverMenu"
        android:layout_width="178dp"
        android:layout_height="52dp"
        android:layout_marginTop="72dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="@string/volverInicio"
        android:textSize="16dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.064"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.708" />

    <Button
        android:id="@+id/btnEditar"
        android:layout_width="177dp"
        android:layout_height="52dp"
        android:layout_marginTop="72dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingLeft="0dp"
        android:paddingRight="0dp"
        android:text="@string/editar"
        android:textSize="16dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.609"
        app:layout_constraintStart_toEndOf="@+id/btnVolverMenu"
        app:layout_constraintTop_toBottomOf="@+id/cardView"
        app:layout_constraintVertical_bias="0.705" />

</androidx.constraintlayout.widget.ConstraintLayout>