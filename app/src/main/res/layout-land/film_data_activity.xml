<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FilmDataActivity">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="732dp"
        android:layout_height="412dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgPeli"
                android:layout_width="151dp"
                android:layout_height="162dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.103"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.064"
                tools:srcCompat="@tools:sample/avatars" />

            <TextView
                android:id="@+id/txtNomDirector"
                android:layout_width="351dp"
                android:layout_height="33dp"
                android:text="TextView"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.347"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtDirector"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtNumAnyo"
                android:layout_width="88dp"
                android:layout_height="22dp"
                android:text="TextView"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.244"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtNomDirector"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtDirector"
                android:layout_width="157dp"
                android:layout_height="22dp"
                android:layout_marginStart="12dp"
                android:text="@string/Director"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.133"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtNomPelicula"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtAnyo"
                android:layout_width="47dp"
                android:layout_height="22dp"
                android:layout_marginStart="12dp"
                android:text="@string/Anyo"
                android:textSize="16dp"
                android:textStyle="italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.101"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtNomDirector"
                app:layout_constraintVertical_bias="0.0" />

            <TextView
                android:id="@+id/txtNomPelicula"
                android:layout_width="346dp"
                android:layout_height="33dp"
                android:text="TextView"
                android:textSize="16dp"
                android:textStyle="bold|italic"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.337"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.068" />

            <TextView
                android:id="@+id/txtFormatoGenero"
                android:layout_width="176dp"
                android:layout_height="28dp"
                android:text="TextView"
                android:textSize="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.171"
                app:layout_constraintStart_toEndOf="@+id/imgPeli"
                app:layout_constraintTop_toBottomOf="@+id/txtNumAnyo"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/btnWebIMDB"
                android:layout_width="177dp"
                android:layout_height="40dp"
                android:layout_marginBottom="248dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/IMDB"
                android:textSize="16dp"
                app:cornerRadius="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.884"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/txtComentario"
                android:layout_width="324dp"
                android:layout_height="96dp"
                android:layout_marginBottom="128dp"
                android:maxLines="3"
                android:scrollbars="vertical"
                android:text="TextView"
                android:textSize="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.147"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnEditar"
                android:layout_width="177dp"
                android:layout_height="40dp"
                android:layout_marginBottom="192dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="@string/editar"
                android:textSize="16dp"
                app:cornerRadius="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.884"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/btnVolverMenu"
                android:layout_width="177dp"
                android:layout_height="40dp"
                android:layout_marginEnd="64dp"
                android:layout_marginBottom="136dp"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:paddingLeft="0dp"
                android:paddingRight="0dp"
                android:text="@string/volverInicio"
                android:textSize="16dp"
                app:cornerRadius="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>