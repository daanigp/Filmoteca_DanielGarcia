<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutActivity">

    <TextView
        android:id="@+id/creadoPor"
        android:layout_width="350dp"
        android:layout_height="30dp"
        android:text="@string/creadoPor"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <ImageView
        android:id="@+id/imagenLogo"
        android:layout_width="172dp"
        android:layout_height="101dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creadoPor"
        app:layout_constraintVertical_bias="0.067"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btnSitioWeb"
        android:layout_width="187dp"
        android:layout_height="27dp"
        android:layout_marginStart="20dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/sitioWeb"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imagenLogo"
        app:layout_constraintVertical_bias="0.154" />

    <Button
        android:id="@+id/btnSoporte"
        android:layout_width="206dp"
        android:layout_height="34dp"
        android:layout_marginStart="20dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/soporte"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSitioWeb"
        app:layout_constraintVertical_bias="0.195" />

    <Button
        android:id="@+id/btnVolver"
        android:layout_width="208dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:text="@string/volver"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.471"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnSoporte"
        app:layout_constraintVertical_bias="0.279" />

</androidx.constraintlayout.widget.ConstraintLayout>